# add this snipplet to your .bashrc to have gbuild output in nice color if and
# only if running in an interactive shell

function make {
	if [ -t 1 ]
	then
  		`which make` gb_COLOR=T -r $@
  	else
    		`which make` -r $@
    	fi
}
